{
  "name": "web",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "build-server": "node server.esbuild.mjs",
    "preview": "vite preview",
    "test": "vitest",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --ignore-unknown --check './**/*' && eslint .",
    "format": "prettier --ignore-unknown --write './**/*'",
    "generate-migrations": "drizzle-kit generate:sqlite --schema ./src/lib/server/db/schema.ts --out ./src/lib/server/db/migrations",
    "xstate-typegen": "xstate typegen src/lib/state.ts"
  },
  "devDependencies": {
    "@picovoice/cobra-web": "^1.2.6",
    "@picovoice/porcupine-web": "^2.2.1",
    "@picovoice/web-voice-processor": "^4.0.8",
    "@sveltejs/adapter-node": "^1.3.1",
    "@sveltejs/kit": "^1.20.4",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.9",
    "@types/node": "^18",
    "@types/ws": "^8.5.6",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@xstate/cli": "^0.5.2",
    "autoprefixer": "^10.4.14",
    "drizzle-kit": "^0.19.13",
    "esbuild": "^0.19.3",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte": "^2.30.0",
    "postcss": "^8.4.24",
    "postcss-load-config": "^4.0.1",
    "prettier": "^3.0.3",
    "prettier-plugin-svelte": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.4",
    "svelte": "^4.0.5",
    "svelte-check": "^3.4.3",
    "svelte-cubed": "^0.2.1",
    "tailwindcss": "^3.3.2",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "vite": "^4.4.10",
    "vitest": "^0.34.6"
  },
  "type": "module",
  "dependencies": {
    "@xstate/svelte": "^2.1.0",
    "better-sqlite3": "^8.6.0",
    "bits-ui": "^0.5.7",
    "bufferutil": "^4.0.7",
    "clsx": "^2.0.0",
    "drizzle-orm": "^0.28.6",
    "drizzle-zod": "^0.5.1",
    "ky": "^1.0.1",
    "lucide-svelte": "^0.274.0",
    "openai": "^4.6.0",
    "partysocket": "^0.0.8",
    "tailwind-merge": "^1.14.0",
    "tailwind-variants": "^0.1.14",
    "ws": "^8.14.2",
    "xstate": "^4.38.2"
  }
}
